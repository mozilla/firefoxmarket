<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8"/>
    <title></title>
</head>
<body>

<script>
    // This URL must be a full url.
    var req = navigator.mozApps.installPackage("{{installURL}}/manifest.webapp");
    req.onsuccess = function() {
        alert(this.result.origin);
    };
    req.onerror = function() {
        alert(this.error.name);
    };
</script>
</body>
</html>



section#search
    div#searchform
        button(data-ng-click="search()" id="searchbutton") Search

        div#searchresults
            div.search-wrap
                h1 Search
                input#searchterm(type="text",name="search",data-ng-model="searchbox" data-ng-change="searchApp()")

                div.search-divider
                div#results
                    div.searchresult(data-ng-repeat="result in results")
                        a(data-ng-href="/app/{{result.id}}")
                            img(data-ng-src="{{result.icon}}",alt="result-icon")
                        h2.result-title {{result.name}}
                        p.result-author {{result.author}}
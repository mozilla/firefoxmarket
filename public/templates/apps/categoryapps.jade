div.category-apps
    div.apps
        div(data-ng-repeat="app in capps",class="app")
                div.app-wrap
                    div.app-details
                        div.app-image
                            a(data-ng-href="/app/{{app.id}}")
                                img.app-icon(data-ng-src="{{app.icon}}")
                        div.app-copy
                            div.app-download-button
                                p Free
                            a(data-ng-href="/app/{{app.id}}")
                                h2.app-title {{app.name}}
                                p.app-author {{app.author}}
                                div(data-starrating,data-rating="{{app.rating}}")
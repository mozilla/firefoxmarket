section.app
    div.wrap
        h3 Category
            span  {{category}}

        div.app-content-container
            div.app-meta
                div.img-rating
                    img(src="{{icon}}")
                    div(StarRating,data-rating="3.5")
                    p {{ratings}}
                div.updates
                    h3 Updated
                    p May 14, 2014

                    p.latest Latest version
                    p.version 0.2

                div.govt-rating
                    img(src="/img/esbrrating.png")


            div.app-information
                div.name-author
                    div.download
                        h3.app-download-button Free
                    h1 {{name}}
                    span.divider |
                    h3 {{author}}
                div.tabs
                    ul
                        li
                            div.tab-trigger(data-tabname="description", data-content="{{app.description}}",data-ng-click="changeTabContent($event)")
                                h4 description

                            div.tab-trigger(data-tabname="screenshots",data-ng-click="changeTabContent($event)")
                                h4 Screenshots

                            div.tab-trigger(data-tabname="releasenotes",data-content="{{app.releaseNotes}}",data-ng-click="changeTabContent($event)")
                                h4 release notes



                div#tab-content
                    h1 TEST


        div#vendor-information
            div#app-links
                p.title Additional Information
                ul
                    li
                        a(data-ng-href="mailto:{{support_email}}") Contact Support

                    li
                        a(data-ng-href="{{support_url}}",target="_blank") Support Site

                    li
                        a(data-ng-href="{{privacy}}") Privacy Policy

                    li
                        a(data-ng-href="{{report_abuse}}") Report Abuse

                    li
                        a(data-ng-href="{{feedback}}") Send Feedback

            div#other-applications
                h2 Apps By this developer
                    a(data-ng-href="#") {{more_other_apps}}
                div#other-applications-list
                    div(data-ng-repeat="app in other_apps",class="other-app")
                        img(data-ng-src="{{app.icon}}")
                        div.details
                            h3 {{app.name}}
                            p {{app.author}}
                            div(data-starrating,data-rating="{{app.rating}}")
                        div.app-download-button.mini-container
                            p Free





        div#reviews
            div
                div.view-all-reviews view all reviews

                h2 Latest Reviews


            div(data-ng-repeat="review in reviews",class="app-review")
                div
                    div.stars
                        div(class="review-rating", data-starrating, data-rating="{{review.rating}}", data-review="true")
                    br
                    div.rating-copy
                        p {{review.copy}}
                    div.username
                        p {{review.username}}


        div#related-apps
            div.wrap
                h3 Related Apps
                    div.apps
                        div(class="app",data-ng-repeat="app in relatedapps")
                            div.app-wrap
                            div.app-details
                                div.app-image
                                    a(data-ng-href="/app/{{app.id}}")
                                        img.app-icon(data-ng-src="{{app.icon}}")
                                div.app-copy
                                    div.app-download-button
                                        p Free
                                    a(ng-href="/app/{{app.id}}")
                                        h2.app-title {{app.name}}
                                        p.app-author {{app.author}}
                                        div(data-starrating,data-rating="{{app.rating}}")

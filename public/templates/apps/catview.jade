section#category-page
    div#category-banner
        div#banner
        div.wrap
            div#category-details
                img#category-icon
                div.category-copy
                    h2(translate) View All Categories &#9656;
                    h1#category-title
                    p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean quis risus viverra, placerat ante ut.

            div#featured-category-apps
                div.wrap
                    h1.spotlight Spotlight Apps
                    div#in-view-featured(class="category in-view-featured")
                    ul.pagination
                        li.active
                        li
                        li

                    div(class="category featuredapps",style="display:none")
                        div(class="category",data-ng-repeat="fapp in featuredapps",data-index="{{fapp.index}}")
                            div.featured-app
                                img(data-ng-src="{{fapp.icon}}",class="icon")
                                h1 {{fapp.name}}
                                h2 {{fapp.author}}
                                div(class="star-rating", starrating, data-rating="{{fapp.rating}}",data-delay="true")


    // The way the editorial works is that a bunch of angular objects will get created based on the JSON.
    // the formating of the name is as follows
    // section_<the index of the section of the editorial type : ie "Staff picks", "Favorites" etc>_ <the index of the app within that section>
    div(class="editorial-collections")
        div.wrap
            div.collections
                div.collection
                    div.curve
                    div.collection-apps
                        div.collection-app
                            a(href="/app/{{section_0_0.id}}")
                                img(src="{{section_0_0.image}}")
                        div.collection-app
                            a(href="/app/{{section_0_1.id}}")
                                img(src="{{section_0_1.image}}")
                        div.collection-app
                            a(href="/app/{{section_0_2.id}}")
                                img(src="{{section_0_2.image}}")
                    div.alt-curve
                    div.collection-copy
                        h2(translate) {{section_0.title}}
                        p {{section_0.copy}}
                div.collection
                    div.curve
                    div.collection-apps
                        div.collection-app
                            a(href="/app/{{section_1_0.id}}")
                                img(src="{{section_1_0.image}}")
                        div.collection-app
                            a(href="/app/{{section_1_1_.id}}")
                                img(src="{{section_1_1.image}}")
                        div.collection-app
                            a(href="/app/{{section_1_2.id}}")
                                img(src="{{section_1_2.image}}")
                    div.alt-curve
                    div.collection-copy
                        h2(translate) {{section_1.title}}
                        p {{section_1.copy}}
                div.collection
                    div.curve
                    div.collection-apps
                        div.collection-app
                            a(href="/app/{{section_2_0.id}}")
                                img(src="{{section_2_0.image}}")
                        div.collection-app
                            a(href="/app/{{section_2_1.id}}")
                                img(src="{{section_2_1.image}}")
                        div.collection-app
                            a(href="/app/{{section_2_2.id}}")
                                img(src="{{section_2_2.image}}")
                    div.alt-curve
                    div.collection-copy
                        h2(translate) {{section_2.title}}
                        p {{section_2.copy}}

    div#featured
        div.wrap
            h1.header(translate) Featured Apps
            div.apps(class="home-apps")
                div(class="{{app.classname}} featured {{app.showfirst}} with-review",data-ng-repeat="app in featuredapps")

                    div.app-wrap
                        div.app-details
                            div.app-image
                                a(data-ng-href="/app/{{app.id}}")
                                    img.app-icon(data-ng-src="{{app.icon}}")

                            div.app-copy
                                div.app-download-button
                                    p(data-ng-click="initPurchase(app.app_type,app.manifest_url,app.name,app.icon)") Install
                                a(data-ng-href="/app/{{app.id}}")
                                    h1.app-title {{app.name}}
                                    h2.app-author {{app.author}}
                                    div(starrating,data-rating="{{app.rating}}", data-delay="true")

                        div.app-description
                            div(appreviews,data-appid="{{app.id}}",data-length="80")

    div#apps-in-category
        div.wrap
            div#popular-in-category(class="category popular",style="position:relative;")
                div.wrap
                    div.controls
                        h1(translate) Apps In Category
                        h2(translate) Sort By
                        div.toggle(data-ng-click="toggleCategoryTypes($event)")
                            span.active(translate) Popular
                            span(translate) Recent
                div.app-grid
                    div.category-popular
                        div(class="category",data-ng-repeat="app in popularapps")
                            div.app(data-type="{{app.app_type}}",data-url="{{app.manifest_url}}")
                                a(data-ng-href="/app/{{app.id}}")
                                    img(data-ng-src="{{app.icon}}")
                                div.app-details
                                    a(data-ng-href="/app/{{app.id}}")
                                        h4 {{app.name}}
                                    p {{app.author}}
                                    div(starrating,data-rating="{{app.rating}}", data-delay="true")

                                div.app-download-button
                                    p(translate,data-ng-click="initPurchase(app.app_type,app.manifest_url,app.name,app.icon)") Install

                    div.category-recent
                        div(class="category",data-ng-repeat="app in recentapps")
                            div.app
                                a(data-ng-href="/app/{{app.id}}")
                                    img(data-ng-src="{{app.icon}}")
                                div.app-details
                                    a(data-ng-href="/app/{{app.id}}")
                                        h4 {{app.name}}
                                    p {{app.author}}
                                    div(starrating,data-rating="{{app.rating}}", data-delay="true")

                                div.app-download-button
                                    p(translate, data-ng-click="initPurchase(app.app_type,app.manifest_url,app.name,app.icon)") Install
                div.wrap
                    div.load-more
                        h1(translate, data-ng-click="getMessage()") Load More Apps

section#HOME(ng-controller="home",class="section ajax")
    div#search-home
        div.wrap
            input#homesearch(type="text",name="search",ng-model="searchbox",placeholder="Search",ng-change="searchApp()")
        div#search-home-result
            div.wrap
                div.searchresult(ng-repeat="result in results")
                    a(ng-href="/app/{{result.id}}")
                        img(ng-src="{{result.icon}}")
                    h2.result-title {{result.name}}
                    p.result-author {{result.author}}


        div#featured
            p.all-trigger(data-type="featured",ng-click="loadAll()") View All
            h1 Featured Apps
            div.apps
                div(class="{{app.classname}} featured {{app.showfirst}}",ng-repeat="app in featured_apps")
                    div.app-wrap
                        div.app-details
                            div.app-image
                                a(ng-href="/app/{{app.id}}")
                                    img.app-icon(ng-src="{{app.icon}}")

                            div.app-copy
                                a(ng-href="/app/{{app.id}}")
                                    h2.app-title {{app.name}}
                                    p.app-author {{app.author}}
                                    div(starrating,data-rating="{{app.rating}}")

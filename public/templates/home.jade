section#HOME(data-ng-controller="home",class="section ajax")
        div.search-home
            div.wrap
                div.close-search(data-ng-click="closeSearch()")
                input.homesearch(id="homesearch",type="text",name="search",data-ng-model="searchbox",placeholder="Search for anything...",data-ng-change="searchApp()")

    
        div#search-home-result
            div.wrap
                div.resultsbyname
                    div.searchresult(data-ng-repeat="result in author_results")
                        a(data-ng-href="/app/{{result.id}}")
                            img.app-icon(data-ng-src="{{result.icon}}")
                        h1.result-title {{result.name}}
                        h2.result-author {{result.author}}
                        div(starrating,data-rating="{{app.rating}}",data-delay="true")

                    div.searchresult(data-ng-repeat="result in name_results")
                        a(data-ng-href="/app/{{result.id}}")
                            img.app-icon(data-ng-src="{{result.icon}}")
                        h1.result-title {{result.name}}
                        h2.result-author {{result.author}}
                        div(starrating,data-rating="{{app.rating}}",data-delay="true")


                    div.searchresult(data-ng-repeat="result in category_results")
                        a(data-ng-href="/app/{{result.id}}")
                            img.app-icon(data-ng-src="{{result.icon}}")
                        h1.result-title {{result.name}}
                        h2.result-author {{result.author}}
                        div(starrating,data-rating="{{app.rating}}",data-delay="true")

                    div.searchresult(data-ng-repeat="result in description_results")
                        a(data-ng-href="/app/{{result.id}}")
                            img.app-icon(data-ng-src="{{result.icon}}")
                        h1.result-title {{result.name}}
                        h2.result-author {{result.author}}
                        div(starrating,data-rating="{{app.rating}}",data-delay="true")

        div#ecollections(class="editorial-collections")
            div.wrap
                div.collections
                    div.collection
                        div.collection-apps
                            div.collection-app
                                a(href="/app/{{staff_one.id}}")
                                    img(src="{{staff_one.image}}")
                            div.collection-app
                                a(href="/app/{{staff_two.id}}")
                                    img(src="{{staff_two.image}}")
                            div.collection-app
                                a(href="/app/{{staff_three.id}}")
                                    img(src="{{staff_three.image}}")
                        div.collection-copy
                                h2(translate) Our Staff Picks
                                p Whether you’re into solving puzzles, playing strategy games, or blasting zombies, we’ve got games for all.
                    div.collection
                        div.collection-apps
                            div.collection-app
                                a(href="/app/{{games_one.id}}")
                                    img(src="{{games_one.image}}")
                            div.collection-app
                                a(href="/app/{{games_two.id}}")
                                    img(src="{{games_two.image}}")
                            div.collection-app
                                a(href="/app/{{games_three.id}}")
                                    img(src="{{games_three.image}}")
                        div.collection-copy
                            h2(translate) Top three Games
                            p Whether you’re into solving puzzles, playing strategy games, or blasting zombies, we’ve got games for all.
                    div.collection
                        div.collection-apps
                            div.collection-app
                                a(href="/app/{{workplace_one.id}}")
                                    img(src="{{workplace_one.image}}")
                            div.collection-app
                                a(href="/app/{{workplace_two.id}}")
                                    img(src="{{workplace_two.image}}")
                            div.collection-app
                                a(href="/app/{{workplace_three.id}}")
                                    img(src="{{workplace_three.image}}")
                        div.collection-copy
                            h2(translate) Great Apps for the workplace
                            p Whether you’re into solving puzzles, playing strategy games, or blasting zombies, we’ve got games for all.


        div#featured
            div.wrap
                div(class="home-apps")
                    div(class="{{app.classname}} featured {{app.showfirst}} with-description",data-ng-repeat="app in featured_apps")

                        div.app-wrap
                            div.app-details
                                div.app-image
                                    a(data-ng-href="/app/{{app.id}}")
                                        img.app-icon(data-ng-src="{{app.icon}}")

                                div.app-copy
                                    div.app-download-button
                                        p(data-ng-click="initPurchase(app.app_type,app.manifest_url)") Install
                                    a(data-ng-href="/app/{{app.id}}")
                                        h1.app-title {{app.name}}
                                        h2.app-author {{app.author}}
                                        div(starrating,data-rating="{{app.rating}}")


                            div.app-description
                                p(data-ng-bind-html="app.description | htmlRender ")


        div#category-list
            div.wrap
                div.controls
                    h1 Categories:
                    div.toggle
                        span.active Popular
                        span Recent
                    button View All Categories
                div.category(data-ng-repeat="item in appcategories")
                    div.category-title(data-name="{{item.name}}")
                        div.title-wrap
                            div.icon(class="{{item.name}}")
                                span.cat-icon
                            div.title-copy
                                h3 {{item.name}}
                                a(href="/category/{{item.name}}")
                                    p View All From Category &#9656;


                    div(categoryapps,data-categoryname="{{item.slug}}")

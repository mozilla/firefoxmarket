section#HOME(data-ng-controller="home",class="section ajax")
        div.search-home
            div.wrap
                div.close-search(data-ng-click="closeSearch()")
                input.homesearch(id="homesearch",type="text",name="search",data-ng-model="searchbox",placeholder="Search for anything...",data-ng-change="searchApp()")
    
        div#search-home-result
            div.wrap
                div.resultsbyname
                    div.searchcolumn
                        div.result-relevance
                            div.relevance
                                h1 Relevance:
                                h2 Name
                                div.total
                                    p results
                        div(data-ng-click="viewSearchResults('name_results')") View All
                        div.searchresult(data-ng-repeat="result in name_results",class="home-name")
                            div.app-wrap
                                div.app-details
                                    div.app-image
                                        a(data-ng-href="/app/{{result.id}}")
                                            img.app-icon(data-ng-src="{{result.icon}}")

                                    div.app-copy
                                        div.app-download-button
                                            p(data-ng-click="initPurchase(result.app_type,result.manifest_url)") Install
                                        a(data-ng-href="/app/{{result.id}}")
                                            h1.app-title {{result.name}}
                                            h2.app-author {{result.author}}
                                            div(starrating,data-rating="{{result.rating}}",data-delay="true")


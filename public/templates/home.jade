section#HOME(data-ng-controller="home",class="section ajax")
        div#search-home
            div.wrap
                input#homesearch(type="text",name="search",data-ng-model="searchbox",placeholder="Search for anything...",data-ng-change="searchApp()")
        div#search-home-result
            div.wrap
                div.searchresult(data-ng-repeat="result in results")
                    a(data-ng-href="/app/{{result.id}}")
                        img(ng-src="{{result.icon}}")
                    h2.result-title {{result.name}}
                    p.result-author {{result.author}}


        div#featured
            div.wrap
                h1 Featured Apps
                div.apps(class="home-apps")
                    div(class="{{app.classname}} featured {{app.showfirst}} with-description",data-ng-repeat="app in featured_apps")

                        div.app-wrap
                            div.app-details
                                div.app-image
                                    a(data-ng-href="/app/{{app.id}}")
                                        img.app-icon(data-ng-src="{{app.icon}}")

                                div.app-copy
                                    div.app-download-button
                                        p Free
                                    a(data-ng-href="/app/{{app.id}}")
                                        h2.app-title {{app.name}}
                                        p.app-author {{app.author}}
                                        div(data-starrating,data-rating="{{app.rating}}")


                            div.app-description
                                p(data-ng-bind-html="app.description | htmlRender ")


        div#ecollections(class="editorial-collections")
            div.wrap
                div.collections
                    div.collection
                        div.layerbackground

div#mainsearch
    div.wrap
        input(type="text",name="search",data-ng-model="searchbox",placeholder="Search for anything...",data-ng-change="searchApp()")
    div.wrap

        div.resultsbyname
            div.searchresult.app(data-ng-repeat="result in author_results")
                a(data-ng-href="/app/{{result.id}}")
                    img.app-icon(data-ng-src="{{result.icon}}")
                h1.result-title {{result.name}}
                h2.result-author {{result.author}}
header
    div(uicontrols)
    div.wrap
        div#logo(data-ng-click="returnHome()")
            img(src="/img/marketplace_logo.png" alt="marketplace-logo")

        div#user-actions
            div#searchbutton(translate,data-ng-click="search()") Search
            div#user
                div#user-details
                    div#menu-trigger(data-ng-click="openMenu($event)")
                        img(src="/img/menu_gear.png")
                    div.identification
                        p#username(data-ng-click="login()",translate) Sign in
                        img(src="/img/test_user.svg")


